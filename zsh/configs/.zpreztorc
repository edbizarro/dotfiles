zstyle ':prezto:*:*' color 'yes'

zstyle ':prezto:load' pmodule \
  'gnu-utility' \
  'utility' \
  'autosuggestions' \
  'command-not-found' \
  'completion' \
  'contrib-prompt' \
  'directory' \
  'docker' \
  'environment' \
  'git' \
  'history-substring-search' \
  'history' \
  'prompt' \
  'python' \
  'rsync' \
  'spectrum' \
  'ssh' \
  'syntax-highlighting' \
  'terminal' \
  'tmux'

zstyle ':prezto:module:prompt' theme 'paradox'
zstyle ':prezto:module:tmux:auto-start' local 'yes'
zstyle ':prezto:module:tmux:auto-start' remote 'no'
zstyle ':prezto:module:ssh:load' identities 'ed25519'
zstyle -s ':prezto:module:utility:download' helper 'aria2c'

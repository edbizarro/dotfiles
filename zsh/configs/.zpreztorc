zstyle ':prezto:*:*' color 'yes'

zstyle ':prezto:load' pmodule \
  'command-not-found' \
  'terminal' \
  'history' \
  'directory' \
  'utility' \
  'spectrum' \
  'git' \
  'ssh' \
  'docker' \
  'pacman' \
  'python' \
  'tmux' \
  'wakatime' \
  'completion' \
  'syntax-highlighting' \
  'history-substring-search' \
  'autosuggestions' \
  'rsync' \
  'contrib-prompt' \
  'prompt'
  
zstyle ':prezto:module:prompt' theme 'pure'
zstyle ':prezto:module:ssh:load' identities 'id_rsa' 'bitbucket_rsa'
zstyle ':prezto:module:tmux:auto-start' local 'yes'
zstyle ':prezto:module:tmux:auto-start' remote 'no'
zstyle ':prezto:module:pacman' frontend 'yay'
zstyle ':prezto:module:prompt' pwd-length 'short'
# Set python-info parameters.
zstyle ':prezto:module:python:virtualenv' auto-switch 'yes'
zstyle ':prezto:module:python:info:virtualenv' format ' %F{4}pyenv%f:%F{2}%v%f'

zstyle ':prezto:*:*' color 'yes'

zstyle ':prezto:load' pmodule \
  'command-not-found' \
  'terminal' \
  'history' \
  'directory' \
  'utility' \
  'spectrum' \
  'git' \
  'ssh' \
  'docker' \
  'pacman' \
  'python' \
  'tmux' \
  'completion' \
  'syntax-highlighting' \
  'history-substring-search' \
  'autosuggestions' \
  'contrib-prompt' \
  'prompt'
  
zstyle ':prezto:module:prompt' theme 'spaceship'
zstyle ':prezto:module:python:virtualenv' auto-switch 'yes'
zstyle ':prezto:module:ssh:load' identities 'id_rsa' 'aur' 'bitbucket_rsa'
zstyle ':prezto:module:tmux:auto-start' local 'yes'
zstyle ':prezto:module:tmux:auto-start' remote 'no'
zstyle ':prezto:module:pacman' frontend 'yay'
zstyle ':prezto:module:prompt' pwd-length 'long'


[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
    pager = delta

[delta]
    features = side-by-side line-numbers decorations
    syntax-theme = OneHalfDark

[interactive]
    diffFilter = delta --color-only

[credential]
    helper = cache --timeout=36000000

[init]
    templatedir = ~/.git-template
    defaultBranch = main

[commit]
    gpgsign = true

[gpg]
    program = gpg2

[color]
    ui = auto

[color "branch"]
    current = green bold
    local = white
    remote = white dim

[color "diff"]
    meta = magenta bold
    frag = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = red bold
    untracked = yellow bold

[push]
    default = simple


[pull]
    rebase = false

[url "https://"]
    insteadOf = git://

!------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
! first two color-window were a013191c
! a6 = 65% amount of black needed over white for white to be a 7 contrast score
! b3 = 70%
! 80 = 50%
rofi.line-margin: 31
rofi.fullscreen: true
rofi.color-enabled: true
rofi.color-window: argb:DA222222, argb:DA222222, argb:00222222
rofi.color-normal: argb:00000000, #e8e8e8, argb:00000000, argb:00000000, #e56aef
rofi.color-urgent: argb:00000000, #f43753, argb:00000000, argb:00000000, #e56aef
rofi.color-active: argb:00000000, #49bbfb, argb:00000000, argb:00000000, #e56aef
rofi.font: DejaVu Sans Mono Nerd Font 20
rofi.eh: 1
rofi.line-margin: 20
rofi.separator-style: solid
rofi.hide-scrollbar: true
rofi.lines: 7
rofi.width: 50
rofi.padding: 200
rofi.bw: 0
rofi.auto-select: false
rofi.fuzzy: true
rofi.scroll-method: 1
rofi.window-format: {t}

!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.autohint:   0
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------
URxvt.modifier: mod1
URxvt*loginShell: true
URxvt.borderless: false
URxvt*dynamicColors: on
URxvt.geometry: 90x20
URxvt.internalBorder: 3
URxvt.lineSpace: 1
URxvt.loginShell: true
URxvt.saveLines: 0
URxvt*termName: rxvt-256color
URxvt.transparent: false
URxvt.visualBell: false
URxvt.iconFile: /usr/share/icons/Papirus/48x48@2x/apps/terminal.svg

! disable ctrl+shift binding
URxvt.iso14755:             false
URxvt.iso14755_52:          false

! Disable Perl extension
! If you do not use the Perl extension features, you can improve the security
! and speed by disabling Perl extensions completely.
URxvt.perl-ext:
URxvt.perl-ext-common:

! Fonts
URxvt.allow_bold:           false
URxvt*font:                 xft:DejaVu Sans Mono Nerd Font:size=16
URxvt*boldFont:             xft:DejaVu Sans Mono Nerd Font:size=16:weight=bold

! Fix font space
URxvt*letterSpace:          -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         false

